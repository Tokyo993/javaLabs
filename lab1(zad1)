package com.company;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner num_1 = new Scanner (System.in);
        System.out.print("Введите первое число:");
        float num1;
        num1 = num_1.nextFloat();
        Scanner num_2 = new Scanner (System.in);
        System.out.print("Введите второе число:");
        float num2;

        num2 = num_2.nextFloat();
        System.out.println("num 1 = " + num1);
        System.out.println("num 2 = " + num2);
        float sum = num1 + num2;
        System.out.println("Сумма двух чисел = " + sum);
        float raz = num1 - num2;
        System.out.println("Разница двух чисел = " + raz);
        float chas = num1 / num2;
        System.out.println("Частное двух чисел = " + chas);
        float umn = num1 * num2;
        System.out.println("Умножение двух чисел =" + umn);
    }
}
